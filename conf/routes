# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Test
GET     /api/lend/test                      controllers.LendGateController.test

# Lend
GET     /api/lend/                          controllers.LendGateController.getBoxes(offset: Int?=0, limit: Int?=100)
GET     /api/lend/:lendId                   controllers.LendGateController.getBoxById(lendId: String)

POST    /api/lend/create                    controllers.LendGateController.create
POST    /api/lend/fund                      controllers.LendGateController.fund

POST    /api/lend/mockCreate                controllers.LendGateController.mockCreate
POST    /api/lend/mockFund                  controllers.LendGateController.mockFund

# Repayment
GET     /api/repayment/                     controllers.LendGateController.getBoxes(offset: Int?=0, limit: Int?=100)
GET     /api/repayment/:repaymentId         controllers.LendGateController.getBoxById(repaymentId: String)

POST    /api/repayment/fund                 controllers.LendGateController.fund
POST    /api/repayment/fullFund             controllers.LendGateController.fullFund

POST    /api/repayment/mockFund             controllers.LendGateController.mockFund
POST    /api/repayment/mockFullFund         controllers.LendGateController.mockFullFund

# ErgoPay Test
GET     /pay/roundtrip/:address             controllers.PayController.roundtrip(address: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)